{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./",
    "lib": [
      "es2015",
      "esnext.asynciterable"
    ],
    "types": [
      "node"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "e2e",
    "./app/@types/**/*"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
