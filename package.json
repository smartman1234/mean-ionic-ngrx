    "karma-mocha-reporter": "^2.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mongoose": "^4.10.2",
    "ngrx-store-freeze": "^0.1.9",
    "nodemon": "^1.11.0",
