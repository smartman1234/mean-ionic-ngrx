{
  "name": "mean-ionic-ngrx",
  "author": "Nicolas Fazio",
  "homepage": "http://nicoalsfazio.ch/",
  "private": true,
  "scripts": {
    "clean": "ionic-app-scripts clean",
    "build": "ionic-app-scripts build",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "prod": "ionic serve --prod",
    "dev": "npm run mongod & npm run server:dev & ionic serve --dev",
    "server:prod": "tsc server/server.ts --outDir ./platforms/server && NODE_ENV=prod node ./platforms/server/server/server.js ",
    "server:dev": "tsc server/server.ts -w --outDir ./platforms/server & nodemon ./platforms/server/server/server.js --dev  --ignore src/ --ignore www/ --ignore .tmp/",
    "mongod": "$HOME/Applications/mongodb/bin/mongod --dbpath $HOME/Applications/mongodb/data/db",
    "deploy:client": "npm run build:browser && gulp deploy",
    "deploy:server": "npm run build:server && npm run deploy:heroku",
    "deploy:heroku": "git push heroku heroku-serve:master --force  && npm run clean:heroku-serve && heroku ps:scale web=1 && heroku open",
    "build:server": "tsc server/server.ts --outDir ./platforms/server && cp ./server/package.json ./platforms/server/package.json && cp ./server/.gitignore ./platforms/server/.gitignore && git add -f ./platforms/server && git add --all && git commit -m 'upd version - `date`' && git subtree split -P ./platforms/server -b heroku-serve && git rm -r --cached ./platforms/server && git add --all && git commit -m 'rm .temp folder'",
    "build:browser": "ionic build browser --prod",
    "clean:heroku-serve": "git branch -D heroku-serve",
    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*+(e2e|spec|index).ts' ./src/  && open docs/index.html",
    "typedoc": "typedoc",
    "e2e": "protractor test-config/protractor.conf.js",
    "test": "karma start test-config/karma.conf.js"
  },
  "dependencies": {
    "@angular/common": "4.1.3",
    "@angular/compiler": "4.1.3",
    "@angular/compiler-cli": "4.1.3",
    "@angular/core": "4.1.3",
    "@angular/forms": "4.1.3",
    "@angular/http": "4.1.3",
    "@angular/platform-browser": "4.1.3",
    "@angular/platform-browser-dynamic": "4.1.3",
    "@ionic-native/core": "3.12.1",
    "@ionic-native/splash-screen": "3.12.1",
    "@ionic-native/status-bar": "3.12.1",
    "@ionic/storage": "2.0.1",
    "@ngrx/effects": "^4.0.5",
    "@ngrx/entity": "github:ngrx/entity-builds",
    "@ngrx/store": "^4.0.3",
    "@ngrx/store-devtools": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "ionic-angular": "3.6.1",
    "ionicons": "3.0.0",
    "jsonwebtoken": "^7.4.1",
    "mongodb": "^2.2.27",
    "mongoose": "^4.10.0",
