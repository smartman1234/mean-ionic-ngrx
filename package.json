{
  "name": "mean-ionic-ngrx",
  "author": "Ionic Framework",
  "homepage": "http://nicoalsfazio.ch/",
  "private": true,
  "scripts": {
    "clean": "ionic-app-scripts clean",
    "build": "ionic-app-scripts build",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "start:prod": "ionic serve --prod",
    "start:dev": "npm run mongod & npm run server:dev & ionic serve --dev",
    "server:prod": "tsc server/server.ts --outDir ./server/dist && NODE_ENV=prod node ./server/dist/server.js ",
    "server:dev": "tsc server/server.ts -w --outDir ./server/dist & nodemon ./server/dist/server.js --dev  --ignore src/ --ignore www/ --ignore .tmp/",
    "mongod": "$HOME/Applications/mongodb/bin/mongod --dbpath $HOME/Applications/mongodb/data/db",
    "deploy:client": "npm run build:browser && gulp deploy",
    "deploy:server": "npm run build:server && npm run deploy:heroku",
    "deploy:heroku": "git push heroku heroku-serve:master --force  && npm run clean:heroku-serve && heroku ps:scale web=1 && heroku open",
    "build:server": "tsc server/server.ts --outDir ./server/dist && cp ./server/package.json ./server/dist/package.json && cp ./server/.gitignore ./server/dist/.gitignore && git add -f ./server/dist/ && git add --all && git commit -m 'upd version - `date`' && git subtree split -P server/dist -b heroku-serve && git rm -r --cached ./server/dist/ && git add --all && git commit -m 'rm .temp folder'",
    "build:browser": "ionic build browser --prod",
    "clean:heroku-serve": "git branch -D heroku-serve",
    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*+(e2e|spec|index).ts' ./src/  && open docs/index.html",
    "typedoc": "typedoc",
    "test": "karma start ./test-config/karma.conf.js"
  },
  "dependencies": {
    "@angular/common": "4.0.0",
    "@angular/compiler": "4.0.0",
    "@angular/compiler-cli": "4.0.0",
    "@angular/core": "4.0.0",
    "@angular/forms": "4.0.0",
    "@angular/http": "4.0.0",
    "@angular/platform-browser": "4.0.0",
    "@angular/platform-browser-dynamic": "4.0.0",
    "@ionic-native/core": "3.4.2",
    "@ionic-native/splash-screen": "3.4.2",
    "@ionic-native/status-bar": "3.4.2",
    "@ionic/storage": "2.0.1",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^2.0.2",
    "@ngrx/store": "^2.2.1",
    "@ngrx/store-devtools": "^3.2.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.1",
    "cors": "^2.8.1",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.3.0",
    "mongodb": "^2.2.25",
    "mongoose": "^4.9.1",
    "morgan": "^1.8.1",
    "ionic-angular": "3.0.1",
    "ionicons": "3.0.0",
    "rxjs": "5.1.1",
    "sw-toolbox": "3.4.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@ionic/app-scripts": "1.3.0",
    "@ionic/cli-build-ionic-angular": "0.0.2",
    "@ionic/cli-plugin-cordova": "0.0.12",
    "@types/body-parser": "^1.16.1",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/mongodb": "^2.1.41",
    "@types/mongoose": "^4.7.9",
    "@types/node": "^7.0.12",
    "angular2-template-loader": "^0.6.2",
    "gulp": "^3.9.1",
    "gulp-gh-pages": "^0.5.4",
    "html-loader": "^0.4.5",
    "jasmine-core": "^2.5.2",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mongoose": "^4.9.1",
    "ngrx-store-freeze": "^0.1.9",
    "nodemon": "^1.11.0",
    "null-loader": "^0.1.1",
    "ts-loader": "^2.0.3",
    "typedoc": "^0.5.10",
    "typescript": "~2.2.1"
  },
  "engines": {
    "node": "~7.0.0"
  },
