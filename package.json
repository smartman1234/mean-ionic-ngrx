    "ionic-mocks": "^1.0.3",
    "jasmine-core": "^2.5.2",
    "jasmine-spec-reporter": "^4.0.0",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
